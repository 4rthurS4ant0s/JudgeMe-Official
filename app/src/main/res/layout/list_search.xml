<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/circleImageViewListSearchFotoPerfil"

        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorPrimaryDark"

        tools:ignore="VectorDrawableCompat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewListSearchNomeUsuario"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/hint_publico_nome_usuario"
        android:textSize="18dp"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:paddingHorizontal="10dp"
        android:paddingTop="15dp"

        app:layout_constraintStart_toEndOf="@id/circleImageViewListSearchFotoPerfil"
        app:layout_constraintTop_toTopOf="@id/circleImageViewListSearchFotoPerfil"/>

    <TextView
        android:id="@+id/textViewListSearchNickUsuario"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/hint_publico_nick_usuario"
        android:textSize="14dp"
        android:textStyle="normal"
        android:textColor="@color/hintColor"
        android:paddingHorizontal="10dp"

        app:layout_constraintStart_toEndOf="@id/circleImageViewListSearchFotoPerfil"
        app:layout_constraintTop_toBottomOf="@id/textViewListSearchNomeUsuario"/>

</android.support.constraint.ConstraintLayout>