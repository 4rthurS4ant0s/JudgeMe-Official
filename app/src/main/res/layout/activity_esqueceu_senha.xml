<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comj.example.android.judgeme_androidapp.Activities.EsqueceuSenhaActivity"

    android:background="@color/background"
    android:padding="10dp">

    <TextView
        android:id="@+id/textViewEsqueceuSenhaCancelar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/hint_processo_geral_cancelar"
        android:textSize="24dp"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewEsqueceuSenha"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/hint_esqueceu_senha"
        android:textSize="30dp"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"

        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="25dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/simpleProgressBarEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEsqueceuSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewEsqueceuSenhaErro"

        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/hint_login_email_verificar"
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="@color/secondaryLightColor"

        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"

        app:layout_constraintTop_toBottomOf="@+id/simpleProgressBarEsqueceuSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewEsqueceuSenhaMensagem"

        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/hint_step2_message"
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"

        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"

        app:layout_constraintTop_toBottomOf="@+id/textViewEsqueceuSenhaErro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editTextEsqueceuSenhaEmail"

        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text"
        android:paddingHorizontal="10dp"

        android:fontFamily="sans-serif-condensed"
        android:hint="@string/hint_step2_email"
        android:inputType="textEmailAddress"
        android:textSize="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEsqueceuSenhaMensagem"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/buttomEsqueceuSenhaEnviar"

        android:layout_width="250dp"
        android:layout_height="80dp"

        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/hint_processo_geral_finalizar"
        android:textAlignment="center"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextEsqueceuSenhaEmail" />

</android.support.constraint.ConstraintLayout>
