<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="comj.example.android.judgeme_androidapp.Fragments.Upload1Fragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayoutMainActivityUpload1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayoutUpload1Option1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/linear_layout"
        android:gravity="center"

        android:layout_weight="1"

        android:orientation="horizontal"

        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textViewUpload1Option1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-condensed"
            android:text="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutUpload1Option2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/linear_layout"
        android:gravity="center"

        android:layout_weight="1"

        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewUpload1Option2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-condensed"
            android:text="2"
            android:textColor="@color/hintColor"
            android:textSize="18dp" />

    </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewUpload1FotosBackEnd"
        android:layout_width="match_parent"
        android:layout_height="320dp"

        android:background="@drawable/photos"

        app:layout_constraintTop_toBottomOf="@id/linearLayoutMainActivityUpload1"
        tools:ignore="VectorDrawableCompat"/>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/imageViewUpload1Fotos"
        android:layout_width="match_parent"
        android:layout_height="320dp"

        android:background="@drawable/photos"

        app:layout_constraintTop_toBottomOf="@id/linearLayoutMainActivityUpload1"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/buttomUpload1Avancar"

        android:layout_width="200dp"
        android:layout_height="40dp"

        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/hint_processo_geral_avancar"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUpload1Fotos"/>

    <TextView
        android:id="@+id/textViewUpload1MenssagemErro"

        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/hint_upload1_erro"
        android:textSize="16dp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:textColor="@color/secondaryLightColor"

        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="25dp"

        app:layout_constraintBottom_toTopOf="@+id/buttomUpload1Avancar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
